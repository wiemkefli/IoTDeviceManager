<Window x:Class="IoTDeviceManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="IoT Device Manager" Height="600" Width="900">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8" >
            <Button Content="Add" Width="90" Margin="0,0,8,0" Command="{Binding AddCommand}"/>
            <Button Content="Update" Width="90" Margin="0,0,8,0" Command="{Binding UpdateCommand}"/>
            <Button Content="Delete" Width="90" Margin="0,0,8,0" Command="{Binding DeleteCommand}"/>
            <Button Content="Toggle Status" Width="120" Margin="0,0,8,0" Command="{Binding ToggleStatusCommand}"/>
            <Separator Width="12"/>
            <Button Content="Start Sim" Width="100" Margin="0,0,8,0" Command="{Binding StartSimCommand}"/>
            <Button Content="Stop Sim" Width="100" Command="{Binding StopSimCommand}"/>
        </StackPanel>

        <Grid Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Devices -->
            <DataGrid Grid.Row="0" Grid.ColumnSpan="2"
                      ItemsSource="{Binding Devices}"
                      SelectedItem="{Binding SelectedDevice, Mode=TwoWay}"
                      AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,8">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                    <DataGridCheckBoxColumn Header="Online" Binding="{Binding IsOnline}" Width="90"/>
                    <DataGridTextColumn Header="Last Updated" Binding="{Binding LastUpdated}" Width="180" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Selected device details -->
            <GroupBox Grid.Row="1" Grid.Column="0" Header="Selected Device" Margin="0,0,8,0">
                <StackPanel Margin="8">
                    <TextBlock Text="Name"/>
                    <TextBox Text="{Binding SelectedDevice.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Margin="0,8,0,0" Text="Type"/>
                    <TextBox Text="{Binding SelectedDevice.Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </GroupBox>

            <!-- Logs -->
            <GroupBox Grid.Row="1" Grid.Column="1" Header="Logs">
                <ListBox ItemsSource="{Binding Logs}" />
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
